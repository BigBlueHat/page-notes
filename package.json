{
  "name": "page-notes",
  "version": "1.0.0",
  "description": "Make notes about web pages; translate them; share them.",
  "main": "index.js",
  "scripts": {
    "build": "npm run build:background && npm run build:popup && npm run build:content-script",
    "build:background": "browserify src/background.js -o extension/background.js",
    "build:content-script": "browserify src/content-script.js -o extension/content-script.js",
    "build:popup": "browserify src/popup.js -o extension/popup/popup.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "Web",
    "Annotation",
    "translation",
    "commenting"
  ],
  "author": "BigBlueHat <byoung@bigbluehat.com>",
  "license": "Apache-2.0",
  "dependencies": {
    "mustache": "^2.3.0",
    "pouchdb-browser": "^6.0.7",
    "pouchdb-find": "^0.10.3"
  },
  "devDependencies": {
    "dom-anchor-text-position": "^3.0.3",
    "dom-anchor-text-quote": "^3.0.0"
  }
}
